{% extends 'base.html.twig' %}

{% block title %}List des soirées{% endblock %}

{% block body %}
    <div class="container">

        <h1>Liste des soirées </h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Date du début</th>
                <th scope="col">Date de fin</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for s in soirees %}
                <tr>
                    <td>{{ s.id }}</td>
                    <td>{{ s.name }}</td>
                    <td>{{ s.dateStart|date('d-m-Y') }}</td>
                    <td>{{ s.dateFinish|date('d-m-Y') }}</td>
                    <td>
                        <a href="{{ path('soirees_manage', {"id":s.id}) }}" class="btn btn-sm btn-success">Gérer</a>
                        <a href="#" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('soirees_delete', {"id":s.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}